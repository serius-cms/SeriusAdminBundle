{% extends '@SeriusAdmin/layout.html.twig' %}

{% set _preview      = block('preview') %}
{% set _form         = block('form') %}
{% set _show         = block('show') %}
{% set _list_table   = block('list_table') %}
{% set _list_filters = block('list_filters') %}
{% set _side_menu    = block('side_menu') %}
{% set _tab_menu     = block('tab_menu') %}
{% set _navbar_title = block('navbar_title') %}
{#{% set _content      = block('content') %}#}
{% set _content      = null %}
{% set _title        = block('title') %}
{#{% set _breadcrumb   = block('breadcrumb') %}#}
{% set _breadcrumb   = null %}
{% set _actions      = block('actions') %}

{% block body_classes %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/seriusadmin/vendor/x-editable/dist/bootstrap3-editable/css/bootstrap-editable.css') }}" media="all">
    {% if admin_pool is defined and admin_pool.getOption('use_select2') %}
        <link rel="stylesheet" href="{{ asset('bundles/seriusadmin/vendor/select2/select2.css') }}" media="all">
        <link rel="stylesheet" href="{{ asset('bundles/seriusadmin/vendor/select2-bootstrap-css/select2-bootstrap.css') }}" media="all">
        <style>
            /*.select2-container {
                margin-left: 0px !important;
            }

            .select2-drop ul {
                margin: 0px !important;
            }*/
        </style>
    {% endif %}
    <link rel="stylesheet" href="{{ asset('bundles/seriusadmin/css/layout.css') }}" media="all">
    <link rel="stylesheet" href="{{ asset('bundles/sonataadmin/css/colors.css') }}" media="all">
    <style type="text/css">
        .sonata-filter-option {
            display: none;
            margin-bottom: 5px !important;
        }
        .sonata-filter-option.active {
            display: block;
        }
        .filter_container .clearfix {
            margin-top: 10px;
        }

        .sonata-ba-side-menu .active > a {
            background: #E2E2E2;
        }
    </style>


{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/seriusadmin/vendor/jquery-number/jquery.number.min.js') }}"></script>
    <script>
        window.SONATA_CONFIG = {
            CONFIRM_EXIT: {% if admin_pool is defined and admin_pool.getOption('confirm_exit') %}true{% else %}false{% endif %},
            USE_SELECT2: {% if admin_pool is defined and admin_pool.getOption('use_select2') %}true{% else %}false{% endif %}
        };
        window.SONATA_TRANSLATIONS = {
            CONFIRM_EXIT:  '{{ 'confirm_exit'|trans({}, 'SonataAdminBundle')|escape('js') }}'
        };

        // Remember tab selection
        $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            var value = $(e.target).attr('id');
            localStorage.setItem('lastTab', value);
        });

        var lastTab = localStorage.getItem('lastTab');
        if (lastTab) {
            $('#'+lastTab).tab('show');
        }

        // number
        $('.money input').number(true, 2, ',', '.');

        // toggle next field
        $('.toggle_next').change(function() {
            //var $next = $(this).closest('.form-group').next().find('input');
            //$next.prop('disabled', !$(this).is(':checked'));
            var $next = $(this).closest('.form-group').next();
            $next.toggle($(this).is(':checked'));
        }).trigger('change');

        // Prevent submitting forms twice
        /*$('form').submit(function(e) {

            $(this).find('input[type=submit], button[type=submit]').each(function() {
                if($(this).data('clicked')) {
                    $(this).prop('disabled', true);
                }
            });
        });

        $('input[type=submit], button[type=submit]').click(function() {
            $(this).data('clicked', true);
        })*/

        $('.sonata-ba-list-expand').click(function() {
            var $tr = $(this).closest('tr');
            var $icon = $(this).find('i');

            $tr.toggleClass('expanded');

            if($tr.hasClass('expanded')) {
                $icon.removeClass('fa-plus-square-o').addClass('fa-minus-square-o');
            }
            else {
                $icon.addClass('fa-plus-square-o').removeClass('fa-minus-square-o');
            }
        });
    </script>

    <script src="{{ asset('bundles/seriusadmin/js/admin.js') }}"></script>
    <script src="{{ asset('bundles/seriusadmin/vendor/x-editable/dist/bootstrap3-editable/js/bootstrap-editable.min.js') }}"></script>
    {% if admin_pool is defined and admin_pool.getOption('use_select2') %}
        <script src="{{ asset('bundles/seriusadmin/vendor/select2/select2.js') }}"></script>
        <script src="{{ asset('bundles/seriusadmin/vendor/select2/select2_locale_nl.js') }}"></script>
    {% endif %}
    <script src="{{ asset('bundles/sonataadmin/jquery/jquery.form.js') }}"></script>
    {% if admin_pool is defined and admin_pool.getOption('confirm_exit') %}
        <script src="{{ asset('bundles/sonataadmin/jquery/jquery.confirmExit.js') }}"></script>
    {% endif %}
    <script src="{{ asset('bundles/ivoryckeditor/ckeditor.js') }}" type="text/javascript"></script>
{% endblock %}

{% block page_title %}
    {{ admin.label|trans({}, admin.translationDomain) }}
{% endblock %}

{% block actions %}
    {% if _actions is defined and _actions is not empty %}
        {{ _actions|raw }}
    {% endif %}
{% endblock %}

{% block breadcrumb %}
    {% block sonata_breadcrumb %}
        {% if _breadcrumb is not empty or action is defined %}
            <div class="bread-crumb">
                {% if action is defined %}
                    {% for menu in admin.breadcrumbs(action) %}
                        {% if not loop.last  %}
                            {% if menu.uri is not empty %}
                                <a href="{{ menu.uri }}">{{ menu.label }}</a>
                            {% else %}
                                {{ menu.label }}
                            {% endif %}
                            <span class="divider">/</span>
                        {% elseif action == 'create' %}
                            <a href="#" class="bread-current">Toevoegen</a>
                        {% else %}
                            <a href="#" class="bread-current">{{ menu.label }}</a>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </div>
        {% endif %}
    {% endblock sonata_breadcrumb %}
{% endblock %}

{% block content %}
    {% block sonata_page_content %}
        <section class="content-header">
            {% block sonata_page_content_header %}
                {% block sonata_page_content_nav %}
                    {% if _tab_menu is not empty %}
                        <nav>
                            {% if _navbar_title is not empty %}
                                <div class="navbar-header">
                                    <span class="navbar-brand">{{ _navbar_title|raw }}</span>
                                </div>
                            {% endif %}
                            <div>
                                <div>
                                    {% if _tab_menu is not empty %}
                                        {{ _tab_menu|raw }}
                                    {% endif %}
                                </div>
                            </div>
                        </nav>
                    {% endif %}
                {% endblock sonata_page_content_nav %}
            {% endblock sonata_page_content_header %}
        </section>

        {% block notice %}
            {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}
        {% endblock %}

        {# Temp fix #}
        {% set _side_menu = _side_menu|raw|trim %}

        <div class="row">
            {% if _side_menu is not empty %}
                <div class="sidebar col-md-2">
                    <div class="well sonata-ba-side-menu" style="padding: 8px 0;">{{ _side_menu|raw }}</div>
                </div>
            {% endif %}

            <div class=" {{ _side_menu is not empty ? 'col-md-10' : 'col-md-12' }}">
                {% block sonata_admin_content %}
                    {% if _preview is not empty %}
                        <div class="sonata-ba-preview">{{ _preview|raw }}</div>
                    {% endif %}

                    {% if _content is not empty %}
                        <div class="sonata-ba-content">{{ _content|raw }}</div>
                    {% endif %}

                    {% if _show is not empty %}
                        <div class="sonata-ba-show">{{ _show|raw }}</div>
                    {% endif %}

                    {% if _form is not empty %}
                        <div class="sonata-ba-form">{{ _form|raw }}</div>
                    {% endif %}

                    {% if _list_table is not empty or _list_filters is not empty %}
                        <div class="row">
                            <div class="sonata-ba-list {% if _list_filters|trim %}col-md-9{% else %}col-md-12{% endif %}">
                                {{ _list_table|raw }}
                            </div>
                            {% if _list_filters|trim %}
                                <div class="sonata-ba-filter col-md-3">
                                    {{ _list_filters|raw }}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                {% endblock %}
            </div>
        </div>
    {% endblock %}
{% endblock %}